{
    "name": "kcd2-lua-run",
    "displayName": "KCD2 Lua Runner",
    "description": "Lua development tools for Kingdom Come: Deliverance 2",
    "version": "2.0.2",
    "publisher": "yobson",
    "private": false,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yobson1/kcd2lua.git"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "lua",
        "kingdom come deliverance",
        "kcd2",
        "game development"
    ],
    "icon": "images/icon.png",
    "main": "./dist/extension.js",
    "activationEvents": [
        "onLanguage:lua"
    ],
    "contributes": {
        "commands": [
            {
                "command": "kcd2-lua.run",
                "title": "KCD2: Run Lua Code"
            },
            {
                "command": "kcd2-lua.runWorkspace",
                "title": "KCD2: Run Workspace Scripts"
            }
        ],
        "configuration": {
            "title": "KCD2 Lua",
            "properties": {
                "kcd2-lua.runOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically run Lua code when saving the file"
                },
                "kcd2-lua.resolveReloadScriptDependencies": {
                    "type": "boolean",
                    "default": true,
                    "description": "Resolve and load Script.ReloadScript calls when running Lua code"
                }
            }
        },
        "keybindings": [
            {
                "command": "kcd2-lua.run",
                "key": "ctrl+shift+r",
                "mac": "cmd+shift+r",
                "when": "editorLangId == lua"
            },
            {
                "command": "kcd2-lua.runWorkspace",
                "key": "ctrl+alt+r",
                "mac": "cmd+alt+r",
                "when": "editorLangId == lua"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "vscode:prelaunch": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^14.x.x",
        "@types/vscode": "^1.75.0",
        "typescript": "^4.x.x",
        "@vscode/vsce": "^3.2.x"
    }
}
